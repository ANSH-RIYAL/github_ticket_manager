{
  "schema_version": "1.0",
  "rules": [
    {
      "id": "NO_IMPORT_FROM_TESTS_001",
      "level": "error",
      "type": "forbid_import",
      "from_globs": ["src/**"],
      "to_globs": ["test/**"]
    },
    {
      "id": "NO_SUBMODULE_OR_TMP_002",
      "level": "error",
      "type": "forbid_import",
      "from_globs": ["**"],
      "to_globs": ["submodules/**", "tmp/**"]
    },
    {
      "id": "ENTRYPOINT_DECLARATION_003",
      "level": "warn",
      "type": "presence",
      "required_entrypoint": "src/index.ts"
    }
  ]
}


